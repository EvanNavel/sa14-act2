<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Animated Div</title>
    <link rel="stylesheet" href="application.css">
</head>
<body>
    <div id="animateMe">Move it!</div>
    <button onclick="toggleAnimation()">Click to ANIMATE!!!</button>

    <script>
        let isMoving = false;

        function toggleAnimation() {
            if (!isMoving) {
                isMoving = true;
                moveDiv();
            } else {
                isMoving = false;
            }
        }

        function moveDiv() {
            if (!isMoving) return;
            const div = document.getElementById('animateMe');
            const maxX = window.innerWidth - div.clientWidth;
            const maxY = window.innerHeight - div.clientHeight;
            const randomX = Math.random() * maxX;
            const randomY = Math.random() * maxY;

            div.style.transform = `translate(${randomX}px, ${randomY}px)`;

            setTimeout(moveDiv, 500);
        }
    </script>
</body>
</html>
